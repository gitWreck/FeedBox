<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/oct3"
    tools:context=".SettingActivity">

    <LinearLayout
        android:id="@+id/linearLayoutBack"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            app:tint="@color/black"
            android:src="@drawable/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp">

        </ImageView>

        <TextView
            android:fontFamily="@font/cabin"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="BACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/baloobhai"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <FrameLayout
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="360dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:id="@+id/imgViewPicture"
                    android:layout_gravity="center"
                    android:src="@drawable/placeholder"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewChangePicture"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="bottom|end"
                app:cardCornerRadius="360dp"
                app:cardBackgroundColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/white"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/camera_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp">

                </ImageView>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <TextView
            android:id="@+id/tvFullName"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/baloobhai"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Full Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:id="@+id/linearLayoutMyAccount"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:tint="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/account_icon"
                android:layout_width="24dp"
                android:layout_height="24dp">

            </ImageView>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="3"
                android:layout_marginStart="15sp"
                android:fontFamily="@font/baloobhai"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="My Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                app:tint="@color/black"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:rotationY="180"
                android:src="@drawable/back_icon"
                android:layout_width="24dp"
                android:layout_height="24dp">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutLogout"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:tint="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/logout_icon"
                android:layout_width="24dp"
                android:layout_height="24dp">

            </ImageView>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="3"
                android:layout_marginStart="15sp"
                android:fontFamily="@font/baloobhai"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                app:tint="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:rotationY="180"
                android:src="@drawable/back_icon"
                android:layout_width="24dp"
                android:layout_height="24dp">

            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>