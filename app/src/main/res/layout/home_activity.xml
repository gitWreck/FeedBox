<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".HomeActivity">



    <FrameLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_marginBottom="100dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="bottom|end"
            app:cardCornerRadius="360dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/homepage_person"
                android:layout_width="200dp"
                android:layout_height="200dp">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/imgView"
            android:scaleType="fitXY"
            android:src="@drawable/bg_homepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

        <TextView
            android:id="@+id/tvGuideline"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="bottom"
            android:fontFamily="@font/cabin"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Read Guidelines Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/pal2"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cabin"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Share your thoughts \nwith us!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/cardViewClickHere"
                    app:cardBackgroundColor="@color/oct1"
                    app:cardCornerRadius="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="15sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/cabin"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="CLICK HERE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="15sp"
                android:layout_gravity="center"
                android:src="@drawable/placeholder"
                android:layout_width="24dp"
                android:layout_height="24dp">

            </ImageView>

            <LinearLayout
                android:layout_weight="3"
                android:layout_marginEnd="15sp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvFullName"
                    android:fontFamily="@font/cabin"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Hey User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:fontFamily="@font/cabin"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Welcome to FeedBox App"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_gravity="top|end"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/bulsu_logo"
            android:layout_width="100dp"
            android:layout_height="100dp">

        </ImageView>

        <ImageView
            android:layout_marginTop="100dp"
            android:layout_gravity="top|center"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/logo_z"
            android:layout_width="100dp"
            android:layout_height="100dp">

        </ImageView>
    </FrameLayout>

    <LinearLayout
        android:background="@color/oct3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/home_icon"
                android:layout_width="20dp"
                android:layout_height="20dp">

            </ImageView>

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/cabin"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutFeedback"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/feedback_icon"
                android:layout_width="20dp"
                android:layout_height="20dp">

            </ImageView>

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/cabin"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSetting"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/setting_icon"
                android:layout_width="20dp"
                android:layout_height="20dp">

            </ImageView>

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/cabin"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>